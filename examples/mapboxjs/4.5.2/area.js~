function area() {
    //Original code by Dan Sunday, http://geomalgorithms.com/a01-_area.html
    L.Polygon.prototype.getArea = function() {
        var coordArr = this.getLatLngs() || [];
        if (coordArr.length > 2) {
            var area = 0.0;
            coordArr.push(coordArr[0], coordArr[1]);
            for (var i=1;i<coordArr.length-1;i++) {
                area = area + coordArr[i].lng * (coordArr[i+1].lat - coordArr[i-1].lat);
            }
            return area/2.0;
        } else {
            return 0;
        }
    }
    return feat.getArea();
}